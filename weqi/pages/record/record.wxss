@import "../../lib/weui.wxss"

.rule-title{
  margin-top:25px;
  font-size:18px;
  color:#000;
}
.rule-content{
  margin-top:10px;
  color:#888;
}

.form_cell{
  flex-direction:column;
  webkit-box-align:flex-start;
  -webkit-align-items:flex-start;
  -ms-flex-align:flex-start;
  align-items:flex-start;
  justify-content:center
}

.rule-list{
  margin-top:20px;
  background-color:#fff;
}
.rule-items{
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display:flex;
  height:40px;
  flex-direction:row;
  align-items:center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  padding:0 15px;
  background-color:#fff;
}
.rule-item{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  justify-content:center;
  display:flex;
  flex-direction:row;
  align-items:center;
}
.rule-item-title{
  width:80px;
  /*margin-left:15px;*/
}
.rule-item-text{
  width:26px;
  height:26px;
  border-radius: 50%;
  line-height:26px;
  text-align:center;
  border:1rpx solid #888;
}

.active .rule-item-text{
  color:#fff;
  background-color:#328fee;
  border-color:#328fee;
}

.weui-input{
  text-align:right;
  height:2.353em;
  line-height:2.353em;
}
.weui-cells:after{
  border:none;
}
.weui-cell__bd{
  height:2.353em;
  line-height:2.353em;
}
.navigator-arrow:after{

}
.rule-address{
  text-align:right;
  margin-right:15px;
}


.cancel-btn{
  margin-top:15px;
  color:#fc3d39;
}
.vui_btn_plain_default {
  border-color:#dfdfdf;
}
.weui-cells_after-title{
  height:40px;
}
.weui-cells_after-title .weui-cell {
  height:40px;
  padding-right:0;
}
.rule-list .rule-items{
    padding-right:0;
}

.icon-contact,.icon-setting,.icon-add {
    width:20px;
    height:20px;
    margin-right:10px;
}
.form_cell_title_default,.rule-item-title,.weui-label{
  width:auto;
  display:flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing:border-box;
}

.rule-setting-cell,.rule-items{
  position:relative;
}
.navigator-arrow{
  position:static;
  flex:0.8;
  width:15px;
  height:20px
}
.rule-setting-cell{
  padding:10px 0 10px 15px;
  border-bottom:0;
}

.form_cell_title_default{
  display:flex;
  flex-direction:column;
  align-items:flex-start;
  justify-content:space-between;
  box-sizing:border-box;
  margin-left:100rpx;

}
.ruleList-title{
  font-size:34rpx;
}
.ruleList-subTitle {
  display:flex;
  flex-direction:row;
  align-items:flex-start;
  justify-content:space-between;
  box-sizing:border-box;
  color:#888;
  font-size:28rpx;
}

.createRule-icon{
  width:80px;
  height:80px;
  position:fixed;
  right:20px;
  bottom:30px;
}

.contact-status {
position:absolute;
top:10px;
/*margin-top:-8rpx;*/
right:28rpx;
color:#328fee;
font-size:28rpx;
}

.contact-cell {
  display:flex;
  flex-direction:column;
}
.icon-contact {
position:absolute;
left:5px;
width:100rpx;
height:100rpx;
}

.weui-input {
  text-align:center;
  font-size:32rpx;
  line-height:3;
}

.navigator-arrow-left:after{
  left:100px;
  right:auto;
  transform:rotate(225deg);
}
.navigator-arrow-right:after{
  right:86px;
}

.record-type-tab{
  display:flex;
  flex-direction:column;
  background-color:#fff;
  border-top:1rpx solid #e5e5e5;
}
.record-type-row {
  display:flex;
  flex:1;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  border-right:1rpx solid #e5e5e5;
  border-bottom:1rpx solid #e5e5e5;
  box-sizing:border-box;
  padding:15px 10px
}
.record-type-row:last-child{
  border-right:0;
}
.record-type-column {
  display:flex;
  flex-direction:row;
  justify-content:center;
  align-items:center;
}

.record-type-status:before{
    content:" ";
    border-radius:50%;
    display:inline-block;
    width:5px;
    height:5px;
    position:relative;
    top:-2px;
    right:5px;
}
.record-status-normal:before{
    border:2px solid #328fee;
    background-color:#328fee;
}
.record-status-late:before,.record-status-leave:before,.record-status-absence:before{
  border:2px solid #fc3d39;
  background-color:#fc3d39;
}
.record-status-outside:before,.record-status-vacation:before{
  border:2px solid #36b152;
  background-color:#36b152;
}





.sign-list{

}
.sign-list-title{
  margin:10px 15px;
  color:#888;
  font-size:28rpx;
}

.list-item{
  position:relative;
  padding:10px 15px;
  border-bottom:1rpx solid #e5e5e5;
  line-height:1.8;
  background-color:#fff;
}
.record-time{
  font-size:34rpx;
}
.record-status{
  font-size:28rpx;
}
.record-address{
  color:#888;
}
.record-status {
  color:#888;
  font-size:12px;
}
.record-type-time.gray {
  color:#888;
}
.noRecord.list-item{
  font-size:34rpx;
  background-color:transparent;
  text-align:center;
  border:none;
  margin-top:10px;
}
