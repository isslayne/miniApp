.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
page{
  background-color:#efeff4;
}

.link-text{
  color:#328fee;
}







/**通用样式**/

.navigator-arrow {
  padding-right:26rpx;
  position:relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.form_cell {
  padding-left:15px;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 44px;
  border: 1px solid #e5e5e5;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  background-color:#fff;
}
.form_cell_title_default{
  width: 79px;
}
.form_cell_body{
    outline: none;
    border: 0;
    -webkit-tap-highlight-color: transparent;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
    /*justify-content: center;*/
}

.vui_btn {
    position: relative;
    display: block;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    text-decoration: none;
    border-radius: 5px;
    overflow: hidden;
    line-height: 2.58824;
    -webkit-tap-highlight-color: transparent;
    box-sizing: border-box;
}
.vui_btn_primary {
    background-color: #328fee;
    color: #fff;
    font-size: 17px;
    /*border: 1px solid #1278df;*/
}
.vui_btn.vui_btn_primary {
  background-color: #328fee;
  color: #fff;
}
.vui_btn_primary:not(.vui_btn_disabled):active {
    color: rgba(255, 255, 255, 0.4);
    background-color: #2b7acb;
}

.vui_btn_plain_default{
  background-color: #fff;
  color: #666;
  font-size: 17px;
  border: 1px solid #bcbcbc;
}

.vui_btn_plain_default:active {
    color: rgba(0, 0, 0, 0.4);
    background-color: rgba(0, 0, 0, 0.15);
}

/*设置按钮样式*/
button[disabled][type="default"], wx-button[disabled]:not([type]) {
  background-color:#a3c9f2;
  color:#cce1f7;

}
button[disabled][type="default"]:active, wx-button[disabled]:not([type]):active {
  background-color:#a3c9f2;
  color:#cce1f7;
}
